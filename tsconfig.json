{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "rootDir": "./",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
  },
  "include": [
    "client/**/*",
    "server/**/*",
    "common/**/*",
    "config.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}